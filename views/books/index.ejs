<% include ../partials/header %>

<header class="jumbotron">
  <div class="container">
    <h1>Welcome to YelpCamp Books</h1>
    <p>View our hand-picked books from all over the world!</p>
    <p><a href="/books/new" id="newbook"><button type="button" class="btn btn-primary btn-lg">Add New Book</button></a></p>
  </div>

</header>

<main>
  <div class="row text-center">
    <% if(books){ %>
    <% books.forEach(function(book){ %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <img src='/static/images/<%= book.url %>' class="img-thumbnail">
        <div class="caption"><h4><%= book.name %></h4></div>
        <form class="" action="/books/<%= book._id %>" method="get">
          <input type="submit" class="btn btn-primary" value="More Info">
        </form>
      </div>
    <% });} %>
  </div>
</main>


<% include ../partials/footer %>
