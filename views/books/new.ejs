<% include ../partials/header %>
<div class="row">
  <div class="col-lg-12">

    <h1 class="text-center">Enter New Book, Service, or Event</h1>

    <div class="new-form mx-auto">
        <form action="/books" method="post">
            <div class="form-group">
              <label for="name">New Title</label>
              <input type="text" class="form-control" name="book[title]" id="name" aria-describedby="nameHelp" placeholder="New Name">
              <small id="nameHelp" class="form-text text-muted">Enter a new title.</small>
            </div>

            <div class="form-group">
              <label for="desc">New Description</label>
              <input type="text" class="form-control" name="book[desc]" id="desc" aria-describedby="descHelp" placeholder="New Description">
              <small id="descHelp" class="form-text text-muted">Enter a new description.</small>
            </div>

            <div class="form-group">
              <label for="url">New Image URL</label>
              <input type="text" class="form-control" name="book[url]" id="url" aria-describedby="urlHelp" placeholder="New Image URL">
              <small id="urlHelp" class="form-text text-muted">Enter a new image url.</small>
            </div>

            <div class="form-group">
              <label for="price">New Price</label>
              <input type="number" class="form-control" name="book[price]" id="price" min="0.01" max="999999.99" step="0.01" aria-describedby="priceHelp" placeholder="New Price">
              <small id="priceHelp" class="form-text text-muted">Enter a new price.</small>
            </div>

            <div class="text-center">
            <input type="submit" class="btn btn-primary btn-block" value="Submit">
            <input type="reset" class="btn btn-primary btn-block" value="Reset">
          </div>
        </form>
        <a href="/books" class="text-center">Go Back</a>
    </div>

  </div>
</div>

<% include ../partials/footer %>
